{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env", "package.json", "versions.json"],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts", "dist/**", "build/**"],
      "env": ["NODE_ENV", "VITE_*", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["NODE_ENV", "VITE_*", "NEXT_PUBLIC_*"]
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"],
      "outputMode": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json", "tsconfig.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "deps:check": {
      "cache": false
    },
    "deps:update": {
      "cache": false
    }
  }
}
